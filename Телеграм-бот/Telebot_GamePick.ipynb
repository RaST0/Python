    "import sqlite3\n",
    "import telebot\n",
    "from telebot import types\n",
    "import random\n",
    "\n",
    "# Добавление ответа в БД\n",
    "def add_answer(parameter_id: int, parameter_name: str, parameter_value: str):\n",
    "\tcursor.execute('INSERT INTO Result (parameter_id, parameter_name, parameter_value) VALUES (?, ?, ?)', (parameter_id,parameter_name,parameter_value,))\n",
    "\tconn.commit()\n",
    "  \n",
    "# Активация бота + подключение к БД\n",
    "bot = telebot.TeleBot(\"") # Token\n",
    "@bot.message_handler(commands=['start'])\n",
    "def start_message(message):\n",
    "\tbot.send_message(message.chat.id, 'Добро пожаловать')\n",
    "conn = sqlite3.connect('datebase.db', check_same_thread=False)\n",
    "cursor = conn.cursor()\n",
    "\n",
    "@bot.message_handler(commands=['quiz'])\n",
    "def select(message):\n",
    "  global order, quest_id, parameter_name, line\n",
    "  if message.text == '/quiz':\n",
    "    order = 1\n",
    "    line = 1\n",
    "  cursor.execute(\"SELECT * FROM Questions where line=? and question_order=?\",(line,order,))\n",
    "  records = cursor.fetchone()\n",
    "  id = records[0],\n",
    "  question = records[1]\n",
    "  asnwers = records[2]\n",
    "  parameter_name = records[3]\n",
    "  quest_id = id\n",
    "  asn = asnwers.split(';') \n",
    "  keyboard = types.ReplyKeyboardMarkup(row_width=2, resize_keyboard=True,one_time_keyboard=True)\n",
    "  for button_content in asn:\n",
    "    btn =  types.KeyboardButton(button_content)\n",
    "    keyboard.add(btn)\n",
    "  msg = bot.send_message(message.chat.id, text=question, reply_markup=keyboard)\n",
    "  bot.register_next_step_handler(msg, on_selection)\n",
    "def on_selection(message):\n",
    "  global order, line\n",
    "  selection = message.text\n",
    "  parameter_id=quest_id[0]\n",
    "  parameter_value = selection\n",
    "  add_answer(parameter_id=parameter_id,parameter_name=parameter_name, parameter_value=selection)\n",
    "  order += 1\n",
    "  cursor.execute(\"SELECT Count(*) FROM Questions where line=?\",(line,))\n",
    "  counter_db = cursor.fetchone()\n",
    "  counter = counter_db[0]\n",
    "  if line == 6:\n",
    "    # Как буд-то бы подбор жанра\n",
    "    genre_list = ['РПГ','Шутер','Гонки','Стратегия']\n",
    "    genres = random.choice(genre_list)\n",
    "    # Выбор ветки жанра\n",
    "    cursor.execute(\"SELECT line FROM ChangeLine where parameter_id=? and parameter_value=?\",(8,genres,))\n",
    "    path = cursor.fetchone()\n",
    "    line = path[0]\n",
    "    order = 1\n",
    "  if order == 8: \n",
    "    cursor.execute(\"SELECT line FROM ChangeLine where parameter_id=? and parameter_value=?\",(8,parameter_value,))\n",
    "    path = cursor.fetchone()\n",
    "    line = path[0]\n",
    "    order = 1\n",
    "  if order <= counter:\n",
    "    if message.text == '>18':\n",
    "      order = 4\n",
    "    select(message)\n",
    "  else:\n",
    "    bot.send_message(message.chat.id, 'Ваша игра: ... ')\n",
    "\n",
    "# Запуск бота\n",
    "bot.polling(none_stop=True, interval=0)"
   ]
  }
